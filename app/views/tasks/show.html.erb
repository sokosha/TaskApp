<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered" id="table-task">
      <tbody>
        <tr>
          <th class="active col-md-2">ID</th>
          <td class="col-md-10"><%= @task.id %></td>
        </tr>
        <tr>
          <th class="active col-md-2">名称</th>
          <td class="col-md-10"><%= @task.name %></td>
        </tr>
        <tr>
          <th class="active col-md-2">タスクの詳細</th>
          <td class="col-md-10"><%= @task.description %></td>
        </tr>
        <tr>
          <th class="active col-md-2">作成日</th>
          <td class="col-md-10"><%= @task.created_at %></td>
        </tr>
        <tr>
          <th class="active col-md-2">更新日</th>
          <td class="col-md-10"><%= @task.updated_at %></td>
        </tr>
      </tbody>
    </table>
      <div class="task-menus">
        <button type="button" class="btn btn-success btn-lg">
          <%= link_to "編集", edit_task_path(@task.id), class: "task_edit_button", :style => "color: white;"  %>
        </button>
        <button type="button" class="btn btn-danger btn-lg">
          <%= link_to "削除", destroy_task_path(@task.id), method: :task, class: "task_delete_button", :style => "color: white;" %>
        </button>
      </div> 
  </div>
</div>